@model IEnumerable<Tag>

    <aside class="widget widget_tag_cloud">
        <div class="widget-title">
            <h3>Popular tags</h3>
        </div>
        <div class="widget-detail">
            <div class="tagcloud"> 
                @foreach(var tag in Model)
                {
                   <a href="#">@tag.Name<span>(5)</span></a>
                } 
            </div>
        </div>
    </aside>    