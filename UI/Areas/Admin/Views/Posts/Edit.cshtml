@model Post
<div class="row mt-5">
    <div class="col">
        <form method="post">

            <input type="hidden"  value="@Model.Id" asp-for="Id">

            <div class="form-group">
                <label>
                    Görünüm
                </label>
                <select asp-for="ShowType" class="form-control" asp-items="@Html.GetEnumSelectList<ShowType>()"></select>
            </div>
            <div class="form-group">
                <label>
                    Başlık
                </label>
                <input type="text" class="form-control" asp-for="Title" />
            </div>
            <div class="form-group">
                <label>
                    İçerik
                </label>
                <textarea class="form-control" rows="10" asp-for="Content"></textarea>
            </div>
            <div class="form-group">
                <a asp-action="Index">Post Listesi</a>
                <button type="submit" class="btn btn-outline-dark float-right"><i class="fa fa-floppy-o"></i> Güncelle</button>
            </div>
        </form>
    </div>
</div>